
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: 'form-group' } ) do |f| %>
  <%= f.error_notification %>
<div class="input-group">
  <div class="field">
    <%= f.input :name %><br />
    <%= f.input :email %><br />
  </div>

  <div class="field">
    <%= f.input :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.input :password_confirmation %><br />
    <br />
  </div>
    </div>
  <div class="well well-lg">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
